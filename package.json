{
  "name": "@kode-frontend/pathfinder-web-react",
  "version": "0.0.1",
  "description": "React ui for @kode-frontend/pathfinder-web-core",
  "author": "KODE frontend team",
  "license": "MIT",
  "homepage": "https://github.com/appKODE/pathfinder-web-react",
  "repository": {
    "url": "git@https://github.com/appKODE/pathfinder-web-react",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/appKODE/pathfinder-web-react/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "release": "release-it",
    "deploy": "gh-pages -d example/build"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "typescript": "^3.7.5"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@kode-frontend/pathfinder-web-core": "^0.0.11",
    "@kode-frontend/pathfinder-web-local-storage": "^0.1.0",
    "@kode-frontend/pathfinder-web-open-api": "^0.1.1",
    "@release-it/conventional-changelog": "^4.3.0",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "fetch-intercept": "^2.4.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "^5.0.1",
    "release-it": "^14.14.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo todo"
    }
  },
  "release-it": {
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "issueUrlFormat": "https://github.com/appKODE/pathfinder-web-react/issues/{{id}}"
        },
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "tagName": "v${version}",
      "requreCleanWorkDir": false,
      "requreUpstream": false,
      "commitMessage": "chore(release): v${version}",
      "push": true
    },
    "gitlab": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
}
